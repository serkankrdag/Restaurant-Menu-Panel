<div class="container">
  <h1 class="my-4">Kategori Listesi</h1>
  <div class="row">
    <% categories.forEach(function(category, index) { %>
      <div class="col-md-6">
        <a href="categorylist?top=<%= category._id %>">
          <div class="card mb-4">
            <div class="row no-gutters">
              <div class="col-md-4">
                <!-- Resim boyutunu maksimum 200px genişlikte göstermek için style özelliğini kullanın -->
                <img src="/images/<%= category.file %>" alt="<%= category.name %>" class="card-img">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h4 class="card-title"><%= category.name %></h4>
                  <p class="card-text"><%= category.desc %></p>
                  <div class="d-flex justify-content-between">
                    <!-- Düzenle sayfasına giden buton -->
                    <a href="categoryedit?id=<%= category._id %>" class="btn btn-primary">Düzenle</a>
                    <!-- Sil butonu -->
                    <form action="/categorydelete" method="post" onsubmit="return confirm('Bu kategoriyi silmek istediğinize emin misiniz?');">
                      <input type="hidden" name="categoryId" value="<%= category._id %>">
                      <button type="submit" class="btn btn-danger">Sil</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </a>
      </div>
    <% }); %>
  </div>
</div>
